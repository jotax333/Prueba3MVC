    private void opciones2ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
                        String seleccionado = opciones2.getSelectedItem().toString();

        if (seleccionado.equalsIgnoreCase("seguro basico")) {
            txtGeneral2.setText("Plan de protección médica esencial pensado para cubrir únicamente las atenciones más básicas y necesarias, ofreciendo un nivel de seguridad mínimo a bajo costo.");
            TxtDetallada2.setText("Este plan brinda acceso a consultas generales, algunos exámenes básicos, atención ambulatoria simple, medicamentos esenciales y urgencias limitadas. Está diseñado para personas que requieren un servicio fundamental sin grandes prestaciones adicionales.");
            txtPorcentaje2.setText("50%");
        }
        if (seleccionado.equalsIgnoreCase("seguro normal")) {
            txtGeneral2.setText("Plan de cobertura equilibrada que amplía los servicios del nivel básico y ofrece acceso a especialistas y prestaciones de mayor complejidad.");
            TxtDetallada2.setText("Permite acceder a consultas especializadas, exámenes avanzados, hospitalización ambulatoria, tratamientos médicos de mediana complejidad y atención de urgencias con una cobertura más amplia. Está estructurado para usuarios que buscan buena relación entre costo y beneficios médicos.");
            txtPorcentaje2.setText("75%");
        }
        if (seleccionado.equalsIgnoreCase("seguro premium")) {
            txtGeneral2.setText("Plan de alta cobertura diseñado para entregar prácticamente la totalidad de los servicios médicos con acceso preferente y prestaciones avanzadas.");
            TxtDetallada2.setText("Incluye atención completa en consultas, hospitalización, cirugías, exámenes de alta complejidad, medicamentos ampliados, programas preventivos y servicios médicos avanzados. Se orienta a quienes buscan la máxima protección disponible y el mínimo gasto en salud.");
            txtPorcentaje2.setText("100%");
        }
    }                                         

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        dispose();
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here: 
                        String seguroseleccionado = (String) opciones2.getSelectedItem();
        String general1 = "Plan de protección médica esencial pensado para cubrir únicamente las atenciones más básicas y necesarias, ofreciendo un nivel de seguridad mínimo a bajo costo.";
        String especifico1 = "Este plan brinda acceso a consultas generales, algunos exámenes básicos, atención ambulatoria simple, medicamentos esenciales y urgencias limitadas. Está diseñado para personas que requieren un servicio fundamental sin grandes prestaciones adicionales.";
        double porc1 = 50;
        String general2 = "Plan de cobertura equilibrada que amplía los servicios del nivel básico y ofrece acceso a especialistas y prestaciones de mayor complejidad.";
        String especifico2 = "Permite acceder a consultas especializadas, exámenes avanzados, hospitalización ambulatoria, tratamientos médicos de mediana complejidad y atención de urgencias con una cobertura más amplia. Está estructurado para usuarios que buscan buena relación entre costo y beneficios médicos.";
        double porc2 = 75;
        String general3 = "Plan de alta cobertura diseñado para entregar prácticamente la totalidad de los servicios médicos con acceso preferente y prestaciones avanzadas.";
        String especifico3 = "Incluye atención completa en consultas, hospitalización, cirugías, exámenes de alta complejidad, medicamentos ampliados, programas preventivos y servicios médicos avanzados. Se orienta a quienes buscan la máxima protección disponible y el mínimo gasto en salud.";
        double porc3 = 100;
        String opcion = (String) opciones2.getSelectedItem();
        Seguro nuevoSeguro = null;
        
        
        switch (opcion) {
            case "seguro basico":
                nuevoSeguro = new Seguro(idActualizar, seguroseleccionado, general1, especifico1, porc1);
                break;
            case "seguro normal":
                nuevoSeguro = new Seguro(idActualizar, seguroseleccionado, general2, especifico2, porc2);
                break;
            case "seguro premium":
                nuevoSeguro = new Seguro(idActualizar, seguroseleccionado, general3, especifico3, porc3);
                break;
            case "elegir seguro":
                nuevoSeguro =  null;
        }
        
                if (nuevoSeguro != null) {
            Mantenedor mant = new Mantenedor();
            mant.actualizarProducto(nuevoSeguro);
            
                    JOptionPane.showMessageDialog(this,
                "Seguro guardado exitosamente.",
                "Éxito",
                JOptionPane.INFORMATION_MESSAGE);
        } else {JOptionPane.showMessageDialog(this,"Debe elegir un seguro","Error", JOptionPane.ERROR_MESSAGE);}

    }                                        

